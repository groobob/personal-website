---
import Navigation from '../components/Navigation.astro';
import ProjectCard from '../components/ProjectCard.astro';
import '../styles/global.css';
import '../styles/projects.css';

let index = 0;

const projectsData = [
	{name: "BURGERPUNK", description1: "Defend and manage your restaurant in this fast-paced first-person shoot-em-up hybrid! Made for Gamedev.js Jam 2025", description2: "PLAY IT HERE", link: "https://chillhopper.itch.io/burgerpunk", image: "src/images/projectimages/Burgerpunk.png"}
];

---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico">
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Projects</title>
		<style>
			html {
				background-image: url("../images/Projects_Tiles.png");
			}
		</style>
	</head>
	<body>
        <Navigation />
		<div class="about">
			<p class="about-text">Here's a collection of things I've worked on</p>
			<p class="about-text" style="font-size: 1rem;">Check out my Github right <a href="https://github.com/groobob" target="_blank">here</a>!</p>
		</div>
		<p class="separator">·•—–––––––•·</p>
		<div class="projects">
			{projectsData.map((data) => <ProjectCard name={data.name} description1={data.description1} description2={data.description2} link={data.link} image={data.image} index={index++}/>)}
		</div>
	</body>
</html>
