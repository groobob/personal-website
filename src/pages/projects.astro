---
import Navigation from '../components/Navigation.astro';
import ProjectCard from '../components/ProjectCard.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
import '../styles/projects.css';
import '../styles/footer.css';

let index = 0;

const projectsData = [
	{name: "My Light and Spirit", description1: "A grid-based puzzle game with a unique light mechanic to interact with the world. Demo made for Gamedev.TV Halloween Jam", description2: "PLAY IT HERE", link: "https://groober.itch.io/my-light-spirit", image: "/projectimages/MyLightandSpirit.png"},
	{name: "BURGERPUNK", description1: "Defend and manage your restaurant in this fast-paced first-person shoot-em-up hybrid! Made for Gamedev.js Jam 2025", description2: "PLAY IT HERE", link: "https://chillhopper.itch.io/burgerpunk", image: "/projectimages/Burgerpunk.png"},
	{name: "Assembly Tetris", description1: "A recreation of Tetris, programmed in MIPS32 assembly using MARS. Made for CSCB58 and cannot be share for academic integrity", description2: "VIDEO DEMO", link: "https://www.youtube.com/watch?v=kGx9aCKJOQc", image: "/projectimages/AssemblyTetris.png"},
	{name: "BLIZZARD BASH", description1: "Multiplayer free for all snowball fight game made for our school's \"Blizzard Bash\" event", description2: "CHECK IT OUT HERE", link: "https://github.com/trudeaugamedev/Blizzard-Bash", image: "/projectimages/BlizzardBash.png"},
	{name: "Nature Sentinel", description1: "Defend nature in this turn&grid-based card game (heavily prototyped version). Made for ICS3U", description2: "PLAY IT HERE", link: "https://groober.itch.io/nature-sentinel", image: "/projectimages/NatureSentinel.png"},
	{name: "Anger Management", description1: "Prototyped physics based destruction game for YRhacks 2023", description2: "PLAY IT HERE", link: "https://groober.itch.io/anger-management", image: "/projectimages/AngerManagement.png"}
];

---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico">
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Projects</title>
		<style>
			html {
				background-image: url("../images/Projects_Tiles.png");
			}
		</style>
	</head>
	<body>
        <Navigation />
		<div class="about">
			<p class="about-text" style="margin-bottom: 0rem;">Here's a collection of things I've worked on</p>
			<p class="about-text" style="font-size: 1rem; margin-top: .5rem;">(in order of coolness)</p>
			<p class="about-text" style="font-size: 1.5rem;">Check out my Github right <a href="https://github.com/groobob" target="_blank">here</a>!</p>
		</div>
		<p class="separator">·•—–––––––•·</p>
		<div class="projects">
			{projectsData.map((data) => <ProjectCard name={data.name} description1={data.description1} description2={data.description2} link={data.link} image={data.image} index={index++}/>)}
		</div>
	</body>
	<Footer/>
</html>
